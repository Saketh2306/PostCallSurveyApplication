<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Edit the survey</title>
  <!-- google font -->
  <link href="https://fonts.googleapis.com/css2?family=Mulish&display=swap" rel="stylesheet">
  <!-- custom css -->
  <link href="css/style.css" rel="stylesheet">
  <link rel="ICON" href="/img/favicon.ico" type="image/ico" />
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <style>
 {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font: 16px/1.4 'Mulish', sans-serif;
  color: #333;
  background: #e3e9ff;
}

p {
  margin: 0 0 20px;
}

ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

button:focus,
input[type="text"]:focus {
  outline: none;
}

#wrapper {
  overflow: hidden;
  width: 100%;
  position: relative;
}

.invitation {
  background: #fff;
  border-radius: 5px;
  box-shadow: 5px 5px 20px -5px rgba(0, 0, 0, 0.2);
  margin: 50px auto;
  max-width: 800px;
}


#header {
  background: #70b3ff;
  color: #fff;
  padding: 20px 30px;
  border-radius: 5px 5px 0 0;
}

#header h1 {
  font-size: 24px;
  font-weight: 400;
}


.main {
  padding: 30px;
}


#inviteForm {
  position: relative;
  margin: 0 0 20px;
}

#inviteForm input {
  border: 1px solid #eee;
  padding: 10px 100px 10px 10px;
  width: 100%;
  height: 50px;
  font: 16px/1.4 'Mulish', sans-serif;
  color: #333;
}

#inviteForm button {
  padding: 0 1em;
  font: 16px/1.4 'Mulish', sans-serif;
  background: #70b3ff;
  color: #fff;
  border-radius: 0;
  border: 0;
  cursor: pointer;
  position: absolute;
  right: 5px;
  top: 5px;
  height: 40px;
  transition: opacity 0.3s linear;
}

#inviteForm button:hover {
  opacity: 0.7;
}

.showHide {
  margin: 0 0 20px;
}

.showHide input[type="checkbox"] {
  margin: 0 0 0 5px;
}


#invitedList li {
  padding: 20px;
  margin: 0 0 10px;
  border-radius: .2em;
  border: 1px solid #eee;
}

#invitedList li span,
#invitedList li input[type="text"] {
  font: 20px/1.4 'Mulish', sans-serif;
  margin: 0 0 5px;
  display: block;
}

#invitedList li input[type="text"] {
  border: 1px solid #eee;
  padding: 10px 100px 10px 10px;
  width: 100%;
  height: 50px;
  color: #333;
}

#invitedList li label {
  font-size: 14px;
  display: block;
  margin: 0 0 10px;
  color: rgba(112, 112, 112, .55);
}

#invitedList li label input[type="checkbox"] {
  margin: 0 0 0 5px;
}

#invitedList li button {
  font-size: 14px;
  margin: 0 5px 0 0;
  border-radius: 3px;
  padding: 5px 10px;
  color: white;
  background: #70b3ff;
  border: 0;
  cursor: pointer;
  transition: opacity 0.3s linear;
}

#invitedList li button:last-child {
  background: #ff7f7f;
}

#invitedList li button:hover {
  opacity: 0.7;
}


#invitedList li.responded {
  transition: 0.4s;
  border-color: #70b3ff;
}

#invitedList li.responded label,
#invitedList li.responded span {
  transition: 0.4s;
  color: #70b3ff;
}

@media only screen and (max-width: 840px) {
  .invitation {
    margin: 20px;
  }
}

@media only screen and (max-width: 640px) {

  body,
  #inviteForm input,
  #inviteForm button {
    font-size: 14px;
  }

  #header h1 {
    font-size: 20px;
  }

  #invitedList li span,
  #invitedList li input[type="text"] {
    font-size: 16px;
  }

  #invitedList li button {
    font-size: 12px;
  }

  #custom ul {
     list-style-type: none;
     margin: 0;
     padding: 0;
     overflow: hidden;
     background-color: #ddd;
  }

  #custom li {
     float: left;
  }

  #custom li a {
     display: block;
     color: #666;
     text-align: center;
     padding: 14px 16px;
     text-decoration: none;
  }

  #custom li a:hover:not(.active) {
     background-color: #111;
  }

  #custom .active {
     background-color: #4CAF50;
  }
}
  </style>
</head>
<body>
<div id="custom">
<ul style="list-style-type: none; margin: 0; padding: 0; overflow: hidden; background-color: #ddd;">
  <li>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<img src="/img/speechsoft.png" alt="Smiley face" width="120" height="40"></li>
  <li style="float:right;"><a href="/login" style=" display: block; color: #666; text-align: center; padding: 14px 16px; text-decoration: none;">Logout</a></li>
  <li style="float:right;"><a href="/home" style=" display: block; color: #666; text-align: center; padding: 14px 16px; text-decoration: none;">Home</a></li>
  <li style="float:right;"><a href="/create" style=" display: block; color: #666; text-align: center; padding: 14px 16px; text-decoration: none;">Create a Survey</a></li>
  <li style="float:right;"><a href="/edit" style=" display: block; color: #666; text-align: center; padding: 14px 16px; text-decoration: none;">Edit a Survey</a></li>
  <li style="float:right"><a href="/queue">Add queues to a survey</a></li>
  <li style="float:right"><a href="/activate">Activate/Deactivate Queues</a></li>
</ul>
<div>
  <div id="wrapper">
    <div class="invitation">
      <header id="header">
        <h1>Survey Questions</h1>
      </header>
      <main class="main">
        <!--
        <div class="showHide">
          <label>Hide those who haven't responded</label>
          <input type="checkbox">
        </div>
        -->
        <% for(var i=0; i < survey_records.length; i++) { %>
        <ul id="invitedList">
          <li>
            <span><%= i+1 %>. <%= map.get((i+1).toString()) %></span>
            <br>
            <form method = "GET" action = "/edit/<%= maps.get((i+1).toString()) %>">
                <button type="submit" >edit</button>
            </form>
            <br>
            <form method = "GET" action = "/edit/remove/<%= maps.get((i+1).toString()) %>" >
                <button type="submit" >remove</button>
            </form>
          </li>
        </ul>
        <% } %>
        <ul id="invitedList">
        <li>
            <form method = "GET" action = "/edit/add/<%= survey_name %>" >
                <button type="submit" >Add a question</button>
            </form>
            <br>
            <form method = "GET" action = "/edit/update/<%= survey_name %>" >
                <button type="submit">Update question priority</button>
            </form>
        </li>
        </ul>
      </main>
    </div>
  </div>
  <!-- custom js -->
  <script type="text/javascript" src="js/app.js"></script>
</body>
</html>